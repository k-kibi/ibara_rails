- @page_title = "付加時パッシブ発動一覧"
%h1= @page_title

.card.desc
  .card-header
    - act_icon(true)
    検索仕様
    - act_desc(true)
  .card-body
    = render "layouts/base_desc"
    %p
      %span.example_select.example_toggle.pointer
        - help_icon
        入力例
        - act_desc(false)
    #example.closed
      = render "layouts/input_desc"
= search_form_for @search do |f|
  %table.search_toggle.table.table-striped.table-bordered.table-hover
    %tbody.pointer
      %tr
        %td{colspan: "5"}
          - act_icon(true)
          絞り込み検索
          - act_desc(true)
    %tbody
      %tr
      %tr
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formNum",  label: "更新回", params_name: "result_no_form", placeholder: nil, colspan: 3)
      %tr
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formNum",  label: "Eno", params_name: "requester_e_no_form", placeholder: "Number")
        - td_form(f, @form_params, @placeholder, class_name: "formText", label: "キャラクター名", params_name: "pc_name_form", placeholder: "Name")
      %tr.sep
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formText",  label: "発動スキル", params_name: "skill_form", placeholder: "Skill", colspan: 3)
      %tr.sep
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formNum",  label: "ダイス結果", params_name: "result_form", placeholder: "Number")
        - td_form(f, @form_params, @placeholder, class_name: "formNum",  label: "増加LV", params_name: "increase_form", placeholder: "Number")
      %tr.sep
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formNum",  label: "ダイス目合計", params_name: "dice_total_form", placeholder: "Number", colspan: 3)
      %tr.sep
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formNum",  label: "ダイス目1", params_name: "dice_1_form", placeholder: "Number")
        - td_form(f, @form_params, @placeholder, class_name: "formNum",  label: "ダイス目2", params_name: "dice_2_form", placeholder: "Number")
      %tr
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formNum",  label: "ダイス目3", params_name: "dice_3_form", placeholder: "Number", colspan: 3)

    - #==========================================================================================================================
    - tbody_toggle(@form_params, params_name: "show_world",
                    label: {open: "所属世界で絞り込む", close: "所属世界で絞り込みを隠す"}, base_first: false)
    %tbody.closed
      %tr
        %td.indent
        - td_form(f, @form_params, @placeholder,                         label: "所属世界", params_name: "world_form", colspan: 3, 
                    checkboxes: [{label: "イバラシティ", params_name: "is_ibaracity", class_name: "after_space mobile_br"},
                                 {label: "アンジニティ", params_name: "is_ansinity"}])

    - #==========================================================================================================================
    %tbody
      %tr.sep
        %td.indent
        %td.indent= hidden_field_tag :is_form, 1
        %td{colspan: "3"}
          - search_submit_button


= paginate(@addition_passives)
%br
ヒット数：#{ @count }件
%br
%br

%table.table.table-striped.table-bordered.table-hover
  %thead
    %tr
      %th= sort_link(@search, :result_no,"更新回", default_order: :desc)
      %th= sort_link(@search, :requester_e_no,"キャラクター(Eno)", default_order: :desc)
      %th.sep= sort_link(@search, :skill_id, "スキル", default_order: :desc)
      %th.sep= sort_link(@search, :result, "結果", default_order: :desc)
      %th= sort_link(@search, :increase, "増加", default_order: :desc)
      %th.sep= sort_link(@search, :dice_total, "合計", default_order: :desc)
      %th.sep= sort_link(@search, :dice_1, "ダイス1", default_order: :desc)
      %th= sort_link(@search, :dice_2, "ダイス2", default_order: :desc)
      %th= sort_link(@search, :dice_3, "ダイス3", default_order: :desc)
      %th.sep{colspan: "2"} 結果リンク
  %tbody
    - @addition_passives.each do |addition_passife|
      %tr
        %td= addition_passife.result_no
        %td{style: "#{ world_border(addition_passife.world) }" }= pc_name_text(addition_passife.requester_e_no, addition_passife.pc_name)
        %td.sep= addition_passife.skill.name if addition_passife.skill
        %td.sep= addition_passife.result
        %td= addition_passife.increase
        %td.sep= addition_passife.dice_total
        %td.sep= addition_passife.dice_1
        %td= addition_passife.dice_2
        %td= addition_passife.dice_3
        %td.sep= character_link(addition_passife.requester_e_no)
        %td= character_old_link(@latest_result, addition_passife.requester_e_no, addition_passife.result_no, addition_passife.generate_no)
= paginate(@addition_passives)
