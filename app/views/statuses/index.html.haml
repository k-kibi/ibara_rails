- @page_title = "その他ステータス一覧"
%h1= @page_title

.card.desc
  .card-header
    - act_icon(true)
    検索仕様
    - act_desc(true)
  .card-body
    = render "layouts/base_desc"
    %p
      %span.example_select.example_toggle.pointer
        - help_icon
        入力例
        - act_desc(false)
    #example.closed
      = render "layouts/input_desc"
= search_form_for @search do |f|
  %table.search_toggle.table.table-striped.table-bordered.table-hover
    %tbody.pointer
      %tr
        %td{colspan: "5"}
          - act_icon(true)
          絞り込み検索
          - act_desc(true)
    %tbody
      %tr
      %tr
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formNum",  label: "更新回", params_name: "result_no_form", placeholder: nil, colspan: 3)
      %tr
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formNum",  label: "Eno", params_name: "e_no_form", placeholder: "Number")
        - td_form(f, @form_params, @placeholder, class_name: "formText", label: "キャラクター名", params_name: "pc_name_form", placeholder: "Name")
      %tr.sep
        %td.indent
        - td_form(f, @form_params, @placeholder,                         label: "スタイル", params_name: "style_id_form", colspan: 3, 
                    checkboxes: [{label: "行動順１【瞬速】", params_name: "style_1", class_name: "after_space"},
                                 {label: "２【疾駆】", params_name: "style_2", class_name: "after_space", br: true},
                                 {label: "３【強襲】", params_name: "style_3", class_name: "after_space"},
                                 {label: "４【特攻】", params_name: "style_4", class_name: "after_space", br: true},
                                 {label: "５【順応】", params_name: "style_5", class_name: "after_space"},
                                 {label: "６【堅固】", params_name: "style_6", class_name: "after_space", br: true},
                                 {label: "７【援助】", params_name: "style_7", class_name: "after_space"},
                                 {label: "８【虎視】", params_name: "style_8", class_name: "after_space", br: true},
                                 {label: "９【日和】", params_name: "style_9"}])
      %tr
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formNum",  label: "影響力", params_name: "effect_form", placeholder: "Number", colspan: 3)
      %tr
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formNum",  label: "MHP", params_name: "mhp_form", placeholder: "Number")
        - td_form(f, @form_params, @placeholder, class_name: "formNum",  label: "MSP", params_name: "msp_form", placeholder: "Number")
      %tr
        %td.indent
        - td_form(f, @form_params, @placeholder,                         label: "現在地地形", params_name: "landform_form", colspan: 3, 
                    checkboxes: [{label: "道路", params_name: "landform_1", class_name: "after_space"},
                                 {label: "草原", params_name: "landform_2", class_name: "after_space"},
                                 {label: "沼地", params_name: "landform_3", class_name: "after_space", br: true},
                                 {label: "森林", params_name: "landform_4", class_name: "after_space"},
                                 {label: "山岳", params_name: "landform_5", class_name: "after_space"}])
      %tr
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formNum",  label: "体調", params_name: "condition_form", placeholder: "Number")
        - td_form(f, @form_params, @placeholder, class_name: "formNum",  label: "体調MAX", params_name: "max_condition_form", placeholder: "Number")
      %tr
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formNum",  label: "PS", params_name: "ps_form", placeholder: "Number", colspan: 3)

    - #==========================================================================================================================
    - tbody_toggle(@form_params, params_name: "show_world",
                    label: {open: "所属世界で絞り込む", close: "所属世界で絞り込みを隠す"}, base_first: false)
    %tbody.closed
      %tr
        %td.indent
        - td_form(f, @form_params, @placeholder,                         label: "所属世界", params_name: "world_form", colspan: 3, 
                    checkboxes: [{label: "イバラシティ", params_name: "is_ibaracity", class_name: "after_space mobile_br"},
                                 {label: "アンジニティ", params_name: "is_ansinity"}])

    - #==========================================================================================================================
    - tbody_toggle(@form_params, params_name: "show_girth",
                    label: {open: "指定キャラの現在地＋周囲8エリアで絞り込む", close: "指定キャラの現在地＋周囲8エリアで絞り込みを隠す"}, base_first: false)
    %tbody.closed
      %tr
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formNum",  label: "更新回", params_name: "place_result_no_form", placeholder: nil, colspan: 3)
      %tr
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formNum",  label: "Eno", params_name: "place_e_no_form", placeholder: "Number")
        - td_form(f, @form_params, @placeholder, class_name: "formText", label: "キャラクター名", params_name: "place_pc_name_form", placeholder: "Name")

    - #==========================================================================================================================
    - tbody_toggle(@form_params, params_name: "show_pm",
                    label: {open: "指定キャラのパーティメンバーで絞り込む", close: "指定キャラのパーティメンバーで絞り込みを隠す"}, base_first: false)
    %tbody.closed
      %tr
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formNum",  label: "更新回", params_name: "pm_result_no_form", placeholder: nil, colspan: 3)
      %tr
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formNum",  label: "Eno", params_name: "pm_e_no_form", placeholder: "Number")
        - td_form(f, @form_params, @placeholder, class_name: "formText", label: "キャラクター名", params_name: "pm_pc_name_form", placeholder: "Name")
      %tr
        %td.indent
        - td_form(f, @form_params, @placeholder, params_name: "pm_party_type_form", colspan: 3, 
                    checkboxes: [{label: "戦闘PTM",     params_name: "pm_battle", class_name: "after_space mobile_br"},
                                 {label: "次回予告PTM", params_name: "pm_next"}])

    - #==========================================================================================================================
    %tbody
      %tr.sep
        %td.indent
        %td.indent= hidden_field_tag :is_form, 1
        %td{colspan: "3"}
          - search_submit_button


= paginate(@statuses)
%br
ヒット数：#{ @count }件
%br
%br

%table.table.table-striped.table-bordered.table-hover
  %thead
    %tr
      %th= sort_link(@search, :result_no,"更新回", default_order: :desc)
      %th= sort_link(@search, :e_no,"キャラクター(Eno)", default_order: :desc)
      %th.sep= sort_link(@search, :style_id, "スタイル", default_order: :desc)
      %th= sort_link(@search, :effect, "影響力", default_order: :desc)
      %th= sort_link(@search, :mhp, "MHP", default_order: :desc)
      %th= sort_link(@search, :msp, "MSP", default_order: :desc)
      %th= sort_link(@search, :landform_id, "地形", default_order: :desc)
      %th= sort_link(@search, :condition, "体調", default_order: :desc)
      %th= sort_link(@search, :max_condition, "体調MAX", default_order: :desc)
      %th= sort_link(@search, :ps, "PS", default_order: :desc)
      %th.sep{colspan: "2"} 結果リンク
  %tbody
    - @statuses.each do |status|
      %tr
        %td= status.result_no
        %td{style: "#{ world_border(status.world) }" }= pc_name_text(status.e_no, status.pc_name)
        %td.text-nowrap.sep
          - style_img_name(status)
        %td= status.effect
        %td= status.mhp
        %td= status.msp
        %td.text-nowrap
          - landform_img_name(status)
        %td= status.condition
        %td= status.max_condition
        %td= status.ps
        %td.sep= character_link(status.e_no)
        %td= character_old_link(@latest_result, status.e_no, status.result_no, status.generate_no)
= paginate(@statuses)
